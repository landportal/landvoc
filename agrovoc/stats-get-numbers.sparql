FROM <http://landvoc.landportal.info>
WHERE {
  ?concept a skos:Concept ;
  skos:prefLabel ?label .
  BIND (lang(?label) AS ?lang)
} 
GROUP BY ?lang
ORDER BY DESC(?count)


